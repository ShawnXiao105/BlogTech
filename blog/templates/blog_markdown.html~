{% block title %}MarkdownTest{% endblock %}
{% block js %}
 <script>
        $(document).ready(function(){
            $('#txtarea').bind('input propertychange', function() {
                $.post("/Markdown/",this.value,function(data){
                     $('#divcontent').html(data.toString());
                });
            });
        });
</script>
{% endblock %}
{% block content %}
            <div class="row">
                <div class="col-md-6">
                    <textarea id="txtarea" class="markdowntxt" name="markdownarea" rows="100"></textarea>
                </div>
                <div id='divcontent' class="col-md-6">
                    [[[Content]]]
                </div>
            </div>
{% endblock %}
